<h1>Log In</h1>

<%= form_with(url: login_path, method: :post) do %>
  <div>
    <%= label_tag :username %>
    <%= text_field_tag :username, params[:username] %>
  </div>

  <div>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>

  <div>
    <%= submit_tag "Log In" %>
  </div>
<% end %>

<%= link_to "Sign up", new_user_path %>
